<?xml version="1.0"?>

<librec-auto>
	<random-seed>201807</random-seed>
	<thread-count>1</thread-count>
	<!-- PATH SECTION -->
	<path>
		<data>demo/data</data>
		<result>result</result>
		<log>log</log>
	</path>
	<!-- DATA SECTION -->
	<data>
		<format>UIR</format>
		<train-file format="text">filmtrust.txt</train-file>
		<binarize-threshold>-1.0</binarize-threshold>
	</data>
	<!-- SPLITTER SECTION -->
	<splitter>
		<model count="5">kcv</model>
		<dim>userfixed</dim>
		<ratio>0.8</ratio>
		<save>true</save>
	</splitter>
	
	<!-- ALGORITHM SECTION -->
	<alg>
		<class>biasedmf</class>
		<learn-rate>0.01</learn-rate>
		<learn-rate-max>0.01</learn-rate-max>
		<learn-rate-decay>1.0</learn-rate-decay>
		<bold-driver>false</bold-driver>
		<iterator-max>20</iterator-max>
		<user-reg>0.01</user-reg>
		<item-reg>0.01</item-reg>
		<bias-reg>0.01</bias-reg>
		<num-factors>
			<value>10</value>
			<value>20</value>
		</num-factors>
	</alg>
	
	<!-- METRICS SECTION -->
	<metric>
		<ranking>true</ranking>
		<class>recall</class>
		<class>precision</class>
		<class>ndcg</class>
		<list-size>10</list-size>
	</metric>
	
<!--	 RERANK SECTION -->
	<rerank action="no-parse">
		<script lang="python3" src="system">
			<script-name>no-op-rerank.py</script-name>
			<param name="max_len">5</param>
			<param name="another_param">0.4</param>
		</script>
<!--		<script lang="python3" src="system">-->
<!--			<script-name>pfar-rerank.py</script-name>-->
<!--			<param name="max_len">5</param>-->
<!--			<param name="lambda">0.5</param>-->
<!--			<param name="binary">True</param>-->
<!--		</script>-->
	</rerank>
	
	<!-- POST-PROCESSING SECTION -->
	<post action='no-parse'>
		<script lang="python3" src="system">
			<script-name>result-graphics.py</script-name>
			<param name="channel">#la_bot</param>
			<param name="decrypted_file">/Users/liuzijun1/Desktop/Librec-auto/librec-auto-library/librec_auto/cmd/post/Key_API.txt.decrypted</param>
			<param name="encrypted_file">/Users/liuzijun1/Desktop/Librec-auto/librec-auto-library/librec_auto/cmd/post/Key_API.txt.encrypted</param>
			<param name="key">/Users/liuzijun1/Desktop/Librec-auto/librec-auto-library/librec_auto/cmd/post/key.key</param>
		</script>

	</post>
	
</librec-auto>
