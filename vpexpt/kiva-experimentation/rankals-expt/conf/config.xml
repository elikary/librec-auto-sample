<?xml version="1.0"?>
<!-- Configuration file for rankALS
	 Extra: Probabilistic latent semantic analysis -->

<librec-auto>
	<random-seed>202001</random-seed>
	<thread-count>1</thread-count>
	
	<!-- PATH SECTION -->
	<path>
		<data>../kiva-experimentation/data</data>
		<result>result</result>
		<log>log</log>
	</path>
	
	<!-- DATA SECTION -->
	<data>
		<format>UIR</format>
		<data-file format="text">rating_5000_cls_hc_10core_iterative.csv</data-file>
	</data>
	
	<!-- SPLITTER SECTION -->
	<splitter>
		<model count="5">kcv</model>
		<dim>userfixed</dim>
		<ratio>0.8</ratio>
		<save>true</save>
	</splitter>
	
	<!-- ALGORITHM SECTION -->
	<alg>
		<class>rankals</class>
		<learn-rate>0.01</learn-rate>
		<learn-rate-max>0.01</learn-rate-max>
		<learn-rate-decay>1.0</learn-rate-decay>
		<bold-driver>false</bold-driver>
		<iterator-max>100</iterator-max>
		<user-reg>0.01</user-reg>
		<item-reg>0.01</item-reg>
		<num-factors>100</num-factors>
		<support-weight>true</support-weight>
	</alg> 

	<!-- METRICS SECTION -->
	<metric>
		<ranking>true</ranking>
		<list-size>10</list-size>
		<class>precision,recall,ndcg</class>
	</metric>
	
	<!-- POST-PROCESSING SECTION -->
	<post action='no-parse'>
		<script lang="python3" src="system">
			<script-name>result-graphics.py</script-name>
			<param name="browser">True</param>
		</script>
	</post> 
</librec-auto>
